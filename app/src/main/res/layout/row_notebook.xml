<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/row_notebook_height"
    android:gravity="center_horizontal"
    >

    <ImageView
        android:id="@+id/row_notebook_icon"
        android:layout_width="@dimen/notebook_icon_size"
        android:layout_height="@dimen/notebook_icon_size"
        android:layout_marginTop="@dimen/notebook_icon_margintop"
        tools:src="@android:drawable/ic_menu_edit"/>

    <TextView
        tools:text="@string/row_notebook_notebook_name_placeholder"
        android:layout_marginTop="@dimen/notebook_textview_margintop"
        android:id="@+id/row_notebook_notebook_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/style_notebook_name" />

</LinearLayout>